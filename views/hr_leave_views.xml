<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_leave_form_inherit" model="ir.ui.view">
        <field name="name">hr.leave.form.inherit</field>
        <field name="model">hr.leave</field>
        <field name="inherit_id" ref="hr_holidays.hr_leave_view_form"/>
        <field name="arch" type="xml">
            <field name="state" position="attributes">
                <attribute name="statusbar_visible">draft,confirm,in_review,validate</attribute>
            </field>

            <field name="can_approve" position="after">
                <field name="can_review" invisible="1"/>
                <field name="leave_reviewer_id" groups="hr_holidays.group_hr_holidays_user"/>
            </field>

            <header position="inside">
                <button name="action_review" 
                        string="Review" 
                        type="object" 
                        class="oe_highlight"
                        attrs="{'invisible': ['|', ('can_review', '=', False), ('state', 'not in', ['draft', 'confirm'])]}"
                        groups="dh_leave_mgt.group_hr_holidays_reviewer"/>
                
                <button name="action_validate" 
                        string="Approve" 
                        type="object" 
                        class="oe_highlight"
                        attrs="{'invisible': [('state', '!=', 'in_review')]}"
                        groups="hr_holidays.group_hr_holidays_user"/>
                
                <!-- <button name="action_refuse" 
                        string="Refuse" 
                        type="object"
                        attrs="{'invisible': [('state', 'in', ['refuse', 'cancel'])]}"
                        groups="hr_holidays.group_hr_holidays_user"/> -->
                
                <button name="action_cancel" 
                        string="Cancel" 
                        type="object"
                        attrs="{'invisible': [('state', 'in', ['refuse', 'cancel'])]}"
                        groups="hr_holidays.group_hr_holidays_user"/>
            </header>
        </field>
    </record>
</odoo>
